{% extends 'base.html.twig' %}

{% block title %}Inicio - Noticias del Zoológico{% endblock %}

{% block content %}
<div class="container mt-5">
    <header class="text-center mb-5 animate__animated animate__fadeInDown">
        <h1 class="display-4 fw-bold">Bienvenido a nuestro Zoológico</h1>
        <p class="lead">Descubre las últimas noticias y actualizaciones sobre el reino animal.</p>
    </header>

    <section class="latest-news">
        <h2 class="text-center mb-4 animate__animated animate__zoomIn">Últimas Noticias</h2>
        
        {% if noticias|length > 0 %}
            <div class="row">
                {% for noticia in noticias %}
                    <div class="col-md-6 col-lg-4 mb-4 animate__animated animate__fadeInUp animate__delay-{{ loop.index * 0.2 }}s">
                        <div class="card h-100 shadow-sm">
                            {% if noticia.imagen %}
                                <img src="{{ noticia.imagen }}" class="card-img-top" alt="Imagen de {{ noticia.titular }}">
                            {% else %}
                                <img src="/path/to/default-image.jpg" class="card-img-top" alt="Sin imagen disponible">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ noticia.titular }}</h5>
                                <p class="card-text text-highlight">
                                    🐾 {{ noticia.descripcion|length > 200 ? noticia.descripcion[:200] ~ '...' : noticia.descripcion }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center animate__animated animate__fadeInUp">No hay noticias disponibles en este momento.</p>
        {% endif %}
    </section>
</div>

<style>
    body {
        background-color: #eef7e9; /* Verde suave para evocar naturaleza */
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .card-body {
        position: relative;
    }

    .card-title {
        color: #2c5f2d; /* Verde oscuro natural */
        font-weight: bold;
        margin-bottom: 10px;
    }

    .text-highlight {
        background-color: #fff6e0; /* Tono cálido como arena o sol */
        padding: 10px;
        border-radius: 10px;
        font-size: 1.2rem; /* Letras más grandes */
        font-weight: bold;
        color: #4b5320; /* Verde musgo */
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
    }

    .text-highlight:before {
        content: "🌳 ";
    }

    .latest-news h2 {
        color: #2c5f2d; /* Verde oscuro natural */
        font-weight: 600;
    }

    @keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate__animated {
        animation-duration: 1s;
        animation-fill-mode: both;
    }

    .animate__fadeInDown {
        animation-name: fadeInDown;
    }

    .animate__zoomIn {
        animation-name: zoomIn;
    }

    .animate__fadeInUp {
        animation-name: fadeInUp;
    }
</style>

<script>
    document.addEventListener('scroll', function () {
        const elements = document.querySelectorAll('.animate__animated');
        const triggerBottom = window.innerHeight / 1.2;

        elements.forEach(el => {
            const boxTop = el.getBoundingClientRect().top;
            if (boxTop < triggerBottom) {
                el.classList.add('animate__visible');
            } else {
                el.classList.remove('animate__visible');
            }
        });
    });
</script>
{% endblock %}
