{% extends 'base.html.twig' %}

{% block title %}Inicio - Noticias del Zool√≥gico{% endblock %}

{% block content %}
<div class="container mt-5">
    <header class="text-center mb-4 animate__animated animate__fadeInDown">
        <h1 class="fw-bold">Bienvenido a nuestro Zool√≥gico</h1>
        <p class="lead">Descubre las √∫ltimas noticias y actualizaciones sobre el reino animal.</p>
    </header>

    <section class="latest-news">
        <h2 class="text-center mb-4 animate__animated animate__zoomIn">√öltimas Noticias</h2>
        
        {% if noticias|length > 0 %}
            <div class="row">
                {% for noticia in noticias %}
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4 animate__animated animate__fadeInUp" style="animation-delay: {{ loop.index * 0.2 }}s">
                        <div class="card h-100 shadow-sm">
                            <img src="{{ noticia.imagen ?: '/path/to/default-image.jpg' }}" class="card-img-top img-fluid" alt="Imagen de {{ noticia.titular }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ noticia.titular }}</h5>
                                <p class="card-text text-highlight">
                                    üêæ {{ noticia.descripcion|length > 200 ? noticia.descripcion[:200] ~ '...' : noticia.descripcion }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center animate__animated animate__fadeInUp">No hay noticias disponibles en este momento.</p>
        {% endif %}
    </section>
</div>

<style>
    body {
        background-color: #eef7e9;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        color: #2c5f2d;
        font-weight: bold;
    }

    .text-highlight {
        background-color: #fff6e0;
        padding: 10px;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: bold;
        color: #4b5320;
    }

    @media (max-width: 576px) {
        h1 {
            font-size: 1.8rem;
        }
        .text-highlight {
            font-size: 0.9rem;
            padding: 8px;
        }
        .card-img-top {
            height: 150px;
        }
    }
</style>
{% endblock %}
